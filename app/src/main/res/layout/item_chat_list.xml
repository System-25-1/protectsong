<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- 이름 / 학번 -->
    <TextView
        android:id="@+id/textStudentId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="논솔이 / 2200000"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textTime" />

    <!-- 시간 또는 날짜 -->
    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19:49"
        android:textSize="12sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 마지막 메시지 -->
    <TextView
        android:id="@+id/textLastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="명신관 6층 화재가 고장났어요"
        android:textSize="14sp"
        android:textColor="#333333"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/textStudentId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textUnreadCount"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 안 읽은 메시지 개수 뱃지 -->
    <TextView
        android:id="@+id/textUnreadCount"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="2"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/bg_unread_badge"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/textLastMessage"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
