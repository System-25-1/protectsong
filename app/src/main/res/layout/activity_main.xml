<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:fitsSystemWindows="true">

    <!-- 📌 메인 콘텐츠 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- ✅ 툴바 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#002366"
            android:title="지키송"
            android:titleTextColor="@android:color/white"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 🟦 신고 버튼 -->
        <LinearLayout
            android:id="@+id/report_buttons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 문자 신고 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnSmsReport"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/bg_circle_button"
                    android:contentDescription="문자 신고"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_dialog_email" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문자 신고"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 긴급 신고 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnEmergency"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:background="@drawable/bg_circle_button"
                    android:backgroundTint="#8B0000"
                    android:contentDescription="긴급 신고"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_dialog_alert"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="긴급 신고"
                    android:textColor="#8B0000"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- 전화 신고 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/ivCall"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/bg_circle_button"
                    android:contentDescription="전화 신고"
                    android:scaleType="centerInside"
                    android:src="@android:drawable/ic_menu_call" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전화 신고"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 🌟 별 이미지 -->
        <ImageView
            android:id="@+id/star_bg"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="24dp"
            android:alpha="0.5"
            android:scaleType="centerInside"
            android:src="@drawable/sookmyung"
            app:layout_constraintTop_toBottomOf="@id/report_buttons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 🔈 호루라기 버튼 -->
        <LinearLayout
            android:id="@+id/whistle_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/star_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnWhistle"
                android:layout_width="358dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_rectangle_button"
                android:contentDescription="호루라기"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                android:tint="#000000" />

            <TextView
                android:id="@+id/tvWhistle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="off"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- 📢 공지 제목 -->
        <TextView
            android:id="@+id/notice_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#002366"
            android:gravity="center"
            android:padding="8dp"
            android:text="공지"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/whistle_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 📄 공지 내용 -->
        <TextView
            android:id="@+id/notice_body"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="16dp"
            android:background="#EEEEEE"
            android:gravity="top"
            android:padding="8dp"
            android:text="공지 내용이 여기에 표시됩니다."
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/notice_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ⬇️ 하단 바 -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:menu="@menu/bottom_nav_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notice_body" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 📂 내비게이션 메뉴 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:headerLayout="@layout/nav_header"
        />

</androidx.drawerlayout.widget.DrawerLayout>
