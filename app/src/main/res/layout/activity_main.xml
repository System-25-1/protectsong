<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- ✅ 메인 콘텐츠 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- 🟦 툴바 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="#002366"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 🟦 중앙 타이틀 텍스트 -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지키송"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/report_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:clipChildren="false"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- 문자 신고 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clipChildren="false"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/btnSmsReport"
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:background="@drawable/bg_left_curve_button"
                    android:src="@drawable/message"
                    android:scaleType="centerInside"
                    android:padding="10dp"
                    android:adjustViewBounds="true" />
            </LinearLayout>

            <!-- 긴급 신고 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp">

                <ImageButton
                    android:id="@+id/btnEmergency"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/bg_circle_button"
                    android:src="@drawable/siren_gpt"
                    android:scaleType="centerInside"
                    android:padding="20dp"
                    android:contentDescription="긴급 신고" />
            </LinearLayout>

            <!-- 전화 신고 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:clipChildren="false"
                android:layout_marginStart="8dp">

                <ImageView
                    android:id="@+id/ivCall"
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    android:background="@drawable/bg_right_curve_button"
                    android:src="@drawable/call"
                    android:scaleType="centerInside"
                    android:padding="22dp"
                    android:adjustViewBounds="true" />
            </LinearLayout>
        </LinearLayout>




        <!-- 🌟 배경 이미지 -->
        <ImageView
            android:id="@+id/star_bg"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.1"
            app:layout_constraintTop_toBottomOf="@id/whistle_section"
            app:layout_constraintBottom_toTopOf="@id/notice_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/sookmyung"
            android:scaleType="fitCenter" />

        <!-- 🔈 호루라기 버튼 -->
        <LinearLayout
            android:id="@+id/whistle_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/report_buttons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/btnWhistle"
                android:layout_width="358dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_rectangle_button"
                android:src="@drawable/off"
                android:scaleType="centerInside"
                android:contentDescription="호루라기" />



        </LinearLayout>

        <!-- 📏 공지 위로 띄우는 가이드라인 -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/noticeSpacer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="80dp" />

        <!-- 🔄 공지 영역 -->
        <LinearLayout
            android:id="@+id/notice_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_notice_border"
            android:layout_margin="16dp"
            android:padding="0dp"
            app:layout_constraintBottom_toTopOf="@id/noticeSpacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 공지 제목 -->
            <TextView
                android:id="@+id/notice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#002366"
                android:gravity="center"
                android:padding="8dp"
                android:text="공지"
                android:fontFamily="@font/pyeojin_gothic_regular"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 공지 내용 영역 -->
            <LinearLayout
                android:id="@+id/notice_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <!-- ⬇️ 하단 네비게이션 바 -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            app:menu="@menu/bottom_nav_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 📂 네비게이션 드로어 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header" />
</androidx.drawerlayout.widget.DrawerLayout>
