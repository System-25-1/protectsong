<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- ✅ 상단 툴바 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#002366">

        <!-- 왼쪽 '뒤로' -->
        <TextView
            android:id="@+id/backText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:text="◀ 뒤로"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/pyeojin_gothic_regular" />

        <!-- 가운데 타이틀 -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="나의 신고 조회"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/pyeojin_gothic_regular" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ✅ 본문 내용 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2025/05/19"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etReportNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="신고(사건)번호 입력"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="검색"
            android:background="#002366"
            android:textColor="#FFFFFF"
            android:padding="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="※ 최근 1년 이내의 신고내역을 조회할 수 있습니다."
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewReports"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신고(접수)일자와 신고(사건)번호 입력 후\n검색 버튼을 누르세요."
                android:textColor="#888888"
                android:gravity="center"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
