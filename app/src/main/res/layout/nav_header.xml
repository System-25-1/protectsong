<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:background="#6C7CBF"
    android:padding="16dp">

    <!-- 프로필 영역 -->

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_profile_circle"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_placeholder" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="김눈송"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvStudentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22000000"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_gravity="center" />

    <!-- 탭 메뉴 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="내 정보"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:padding="8dp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CCCCCC" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="설정"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:padding="8dp" />
    </LinearLayout>

    <!-- 메뉴 항목 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나의 신고 조회"
            android:drawableEnd="@android:drawable/ic_menu_more"
            android:padding="12dp"
            android:textColor="#FFFFFF" />

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#AAAAAA" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위장 전화 설정"
            android:drawableEnd="@android:drawable/ic_menu_more"
            android:padding="12dp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- 하단 로그아웃 -->
    <TextView
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="로그아웃"
        android:background="@drawable/bg_rectangle_button"
        android:textColor="#002366"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="40dp"/>
</LinearLayout>
