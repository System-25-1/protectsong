<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:background="#6C7CBF"
    android:padding="16dp">


    <!-- 프로필 이미지 -->
    <ImageView
        android:id="@+id/navProfileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_profile_circle"
        android:src="@drawable/ic_profile_placeholder"
        android:scaleType="centerCrop"
        android:clipToOutline="true" />

    <!-- 이름 + 학번 -->
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="김눈송"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvStudentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="22000000"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:gravity="center" />

    <!-- 탭: 내 정보 / 설정 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvMyProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="내 정보"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:padding="8dp" />


        <TextView
            android:id="@+id/tvSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="설정"
            android:gravity="center"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:padding="8dp" />
        <!-- 새 로그 확인 버튼 (관리자 전용) -->
        <TextView
            android:id="@+id/tvLogCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그 확인"
            android:gravity="center"
            android:background="@drawable/bg_rectangle_button"
            android:textColor="#002366"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- 메뉴 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tvMyReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나의 신고 조회"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:padding="12dp"
            android:textColor="#FFFFFF" />


        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#AAAAAA" />


    </LinearLayout>

    <!-- 로그아웃 버튼 -->
    <TextView
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="로그아웃"
        android:background="@drawable/bg_rectangle_button"
        android:textColor="#002366"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="40dp"/>
</LinearLayout>
