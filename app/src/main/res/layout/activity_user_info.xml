<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- 상단 전체 파란바 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#082478">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle_white_bg"
                android:padding="8dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 정보 입력"
                android:layout_marginTop="25dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <!-- 안내 텍스트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아래 입력사항은 신고 시 이용됩니다.\n정확한 정보를 입력하셔야 신고출동 및 처리에 도움이 됩니다."
                android:textColor="#222222"
                android:textSize="12sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(*) 항목은 필수입니다."
                android:textColor="#3366FF"
                android:textSize="13sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:padding="16dp"
        android:background="@drawable/rounded_gray_border"
        android:layout_marginBottom="24dp"
        android:clipToOutline="true">
        <!--전화번호-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호 *"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <!-- 전화번호 입력 + 인증하기 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phoneEdit"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="48dp"
                android:hint="010-1234-5678"
                android:background="@drawable/rounded_input_bg_white"
                android:paddingHorizontal="12dp"
                android:inputType="phone"
                android:textColorHint="#999999"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/verifyPhoneButton"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="48dp"
                android:text="인증하기"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_border"
                android:textColor="#082478"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <!-- 인증번호 입력 + 인증번호 확인 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/verificationCodeEdit"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="48dp"
                android:hint="인증번호 입력"
                android:background="@drawable/rounded_input_bg_white"
                android:paddingHorizontal="12dp"
                android:inputType="number"
                android:textColorHint="#999999" />

            <Button
                android:id="@+id/checkCodeButton"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="48dp"
                android:text="인증번호 확인"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_border"
                android:textColor="#082478"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="#082478" />

        <!-- 이름 + 사진 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 왼쪽 입력 필드 묶음 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:layout_marginEnd="12dp">

                <!-- 이름 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름 *"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp" />

                <EditText
                    android:id="@+id/nameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_input_bg_white"
                    android:paddingHorizontal="12dp"
                    android:layout_marginTop="5dp"/>

                <!-- 생년월일 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생년월일 *"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="2dp" />

                <EditText
                    android:id="@+id/birthEdit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_input_bg_white"
                    android:inputType="date"
                    android:hint="YYYY.MM.DD"
                    android:paddingHorizontal="12dp"
                    android:layout_marginTop="5dp"/>

                <!-- 학번 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학번 *"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="2dp" />

                <EditText
                    android:id="@+id/studentIdEdit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_input_bg_white"
                    android:paddingHorizontal="12dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <!-- 오른쪽 사진 선택 -->
            <ImageButton
                android:id="@+id/pickImageButton"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_border"
                android:scaleType="fitCenter"
                android:src="@drawable/login"
                android:tint="#082478" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="#082478" />

        <!-- 보호자 정보 구역 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보호자 정보"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp" />

        <!-- 보호자 이름 + 관계 (수평 배치) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <EditText
                android:id="@+id/guardianNameEdit"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="48dp"
                android:background="@drawable/rounded_input_bg_white"
                android:hint="이름"
                android:paddingHorizontal="12dp"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/relationshipSpinner"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="48dp"
                android:background="@drawable/spinner_with_arrow" />
        </LinearLayout>

        <!-- 보호자 전화번호 -->
        <EditText
            android:id="@+id/guardianPhoneEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="010-1234-5678"
            android:background="@drawable/rounded_input_bg_white"
            android:paddingHorizontal="12dp"
            android:inputType="phone"
            android:textColorHint="#999999"
            android:layout_marginTop="5dp"/>


    </LinearLayout>

        <!-- 저장 버튼 -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="저장"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="#082478" />

    </LinearLayout>
</ScrollView>
