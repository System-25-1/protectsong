<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- 상단 툴바 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#082478">

            <TextView
                android:id="@+id/backText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="◀ 뒤로"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/pyeojin_gothic_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 정보 입력"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/pyeojin_gothic_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 안내 텍스트 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아래 입력사항은 신고 시 이용됩니다.\n정확한 정보를 입력하셔야 신고출동 및 처리에 도움이 됩니다."
                android:textColor="#222222"
                android:textSize="12sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/pyeojin_gothic_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(*) 항목은 필수입니다."
                android:textColor="#3366FF"
                android:textSize="13sp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/pyeojin_gothic_regular" />
        </LinearLayout>

        <!-- 입력 폼 전체 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:padding="16dp"
            android:background="@drawable/rounded_gray_border"
            android:layout_marginBottom="24dp"
            android:clipToOutline="true">

            <!-- 전화번호 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호 *"
                android:textColor="#000000"
                android:textSize="14sp"
                android:fontFamily="@font/pyeojin_gothic_regular"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/phoneEdit"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="48dp"
                    android:hint="010-1234-5678"
                    android:background="@drawable/rounded_input_bg_white"
                    android:paddingHorizontal="12dp"
                    android:inputType="phone"
                    android:textColorHint="#999999"
                    android:fontFamily="@font/pyeojin_gothic_regular"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:id="@+id/verifyPhoneButton"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="48dp"
                    android:text="인증번호발송"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_border"
                    android:textColor="#082478"
                    android:textStyle="bold"
                    android:fontFamily="@font/pyeojin_gothic_regular"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <!-- 인증번호 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/verificationCodeEdit"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="48dp"
                    android:hint="인증번호 입력"
                    android:background="@drawable/rounded_input_bg_white"
                    android:paddingHorizontal="12dp"
                    android:inputType="number"
                    android:textColorHint="#999999"
                    android:fontFamily="@font/pyeojin_gothic_regular" />

                <Button
                    android:id="@+id/checkCodeButton"
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="48dp"
                    android:text="인증번호 확인"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_border"
                    android:textColor="#082478"
                    android:textStyle="bold"
                    android:fontFamily="@font/pyeojin_gothic_regular"/>
            </LinearLayout>

            <!-- 이름, 생년월일, 학번 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름 *"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/pyeojin_gothic_regular" />
            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_input_bg_white"
                android:paddingHorizontal="12dp"
                android:fontFamily="@font/pyeojin_gothic_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생년월일 *"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/pyeojin_gothic_regular" />
            <EditText
                android:id="@+id/birthEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_input_bg_white"
                android:inputType="date"
                android:hint="YYYY.MM.DD"
                android:paddingHorizontal="12dp"
                android:fontFamily="@font/pyeojin_gothic_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학번 *"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/pyeojin_gothic_regular" />
            <EditText
                android:id="@+id/studentIdEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_input_bg_white"
                android:paddingHorizontal="12dp"
                android:fontFamily="@font/pyeojin_gothic_regular" />

            <!-- 비밀번호 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 *"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/pyeojin_gothic_regular" />
            <EditText
                android:id="@+id/passwordEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_input_bg_white"
                android:paddingHorizontal="12dp"
                android:inputType="textPassword"
                android:fontFamily="@font/pyeojin_gothic_regular" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인 *"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/pyeojin_gothic_regular" />


            <EditText
                android:id="@+id/passwordConfirmEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_input_bg_white"
                android:paddingHorizontal="12dp"
                android:inputType="textPassword"
                android:fontFamily="@font/pyeojin_gothic_regular" />

            <TextView
                android:id="@+id/passwordWarning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호는 8~16자의 영문 대문자, 소문자, 숫자를 모두 포함해 주세요."
                android:textColor="#FF0000"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:fontFamily="@font/pyeojin_gothic_regular" />

            <!-- 보호자 정보 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보호자 정보"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/pyeojin_gothic_regular" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <EditText
                    android:id="@+id/guardianNameEdit"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_input_bg_white"
                    android:hint="이름"
                    android:paddingHorizontal="12dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/pyeojin_gothic_regular" />

                <Spinner
                    android:id="@+id/relationshipSpinner"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>

            <EditText
                android:id="@+id/guardianPhoneEdit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="010-1234-5678"
                android:background="@drawable/rounded_input_bg_white"
                android:paddingHorizontal="12dp"
                android:inputType="phone"
                android:textColorHint="#999999"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pyeojin_gothic_regular" />
        </LinearLayout>

        <!-- 저장 버튼 -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="저장"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="#082478"
            android:fontFamily="@font/pyeojin_gothic_regular" />
    </LinearLayout>
</ScrollView>
